@model RuuviTagApp.ViewModels.MacAddressModel

@{ 
    var validation = Html.ValidationMessageFor(model => model.MacAddress, "", new { @class = "text-danger" });
    var lbl = validation.ToHtmlString().Length;
}

@using (Html.BeginForm("AddTag", "Home", FormMethod.Post, new { @id = "addTagForm" }))
{
    @Html.AntiForgeryToken()

    @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
    <div id="addTagGroup" class="form-group">
        @*@Html.LabelFor(model => model.MacAddress, htmlAttributes: new { @class = "control-label col-md-2" })*@
        @Html.EditorFor(model => model.MacAddress, new { htmlAttributes = new { @class = "form-control", required = true } })
        <label id="addTagLabel" for="tagId">
            @{
                if (lbl < 123)
                {
                    <text>RuuviTag ID</text>
                }
                else
                {
                    @validation
                }
            }
        </label>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
